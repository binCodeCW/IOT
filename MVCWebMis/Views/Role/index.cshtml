@section footerScript {

<script type="text/javascript">
        var currentPage = 1, rows = 10; //分页参数：当前页，记录数

        var isAddOrEdit = 'add';//标识是新增还是编辑对话框弹出，用于删除附件的操作
        var url;//新增或者更新的连接
        var ID;//ID值，新增为空，编辑或者查看为具体ID

        //页面初始化
        $(function () {
            initJsTree();       //初始化角色树
            InitStyle();        //设置控件的样式
            BindEvent();        //绑定事件处理
            Search(currentPage);//初始化第一页数据
            InitDictItem();     //初始化字典信息
        });

        function Refresh()
        {
            initJsTree();
            if(clickId != undefined && clickId != '') {
                loadData(clickId);
            }
        }

        //初始化树列表
        var deptid = "";
        var roleid = "";
        function initJsTree() {
            //绑定左侧树形列表
            bindJsTree("jstree_div", "/Role/GetMyRoleJsTreeJson?userId=@Session["UserId"]");

            //树控件的变化事件处理
            $('#jstree_div').on("changed.jstree", function (e, data) {
                var icon = data.node.icon;
                var id = data.selected + '';

                var dept = "dept";
                var role = "role";
                if (id.indexOf(dept) == 0) {
                    var newid = id.substring(dept.length, id.length);
                    deptid = newid;
                }
                else if (id.indexOf(role) == 0) {
                    var newid = id.substring(role.length, id.length);
                    loadData(newid);
                    roleid = newid;
                }
            });

            //初始化所有该用户的所有功能集合
            var treeUrl = '/Function/GetRoleFunctionJsTreeByUser?userId=@Session["UserId"]';
            bindJsTree("tree_function", treeUrl, true);

            //角色数据权限，先初始化所有部门
            treeUrl = '/User/GetMyDeptJsTreeJson?userId=@Session["UserId"]';
            bindJsTree("tree_roledata", treeUrl, true);

            //角色菜单权限
            treeUrl = '/Menu/GetMenuJsTreeJson?userId=@Session["UserId"]';
            bindJsTree("tree_menu", treeUrl, true);
        }

        //加载指定的对象数据
        var clickId = "";
        function loadData(id) {            
            $('#ffEdit').validate().resetForm();//去除验证信息
            BindEditInfo(id);

            //选中当前角色的功能权限和数据权限
            initRoleFunction(id);
            initRoleData(id);
            initRoleMenu(id);

