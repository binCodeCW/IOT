            //     prefix: ''
            // });
                         
            //初始化fileinput控件（第一次初始化）
            //initFileInput("file-Portrait", "/YH01_DeviceDataRec/EditPortrait");
        }

        //根据条件查询并绑定结果
        function Search(page) {
            //根据控件Name属性获取表单预设条件
            var condition = $("#ffSearch").serialize();

            //根据需要加上一些特殊条件
