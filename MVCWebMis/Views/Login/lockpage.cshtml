
@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="zh-CN" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="zh-CN" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh-CN">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>养和医疗云平台管理系统</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    @using System.Web.Optimization;
    @Styles.Render("~/metronic/css")

    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/Content/metronic/assets/pages/css/lock.min.css" rel="stylesheet" type="text/css" />

    @*此处添加一些Jquery相关的脚本，方便开发时刻自定义脚本的智能提示*@
    <script src="~/Content/metronic/assets/global/plugins/jquery.min.js" type="text/javascript" ></script>
    <script src="~/Content/metronic/assets/global/plugins/jquery-migrate.min.js" type="text/javascript" ></script> 
    <script src="~/Content/metronic/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>

    <script src="~/Content/JQueryTools/jNotify/jquery/jNotify.jquery.js"></script>
    <!--处理Json数据脚本-->
    <script src="~/Content/JQueryTools/JSON-js/json2.js"></script>

    <!-- END THEME STYLES -->

    <!--常用的一些组件业务脚本函数,放置此处方便脚本提示-->
    <script src="~/Scripts/ComponentUtil.js"></script>  
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body>
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="/Login/index">
                <h2 style="color:white">养和信息化平台管理系统</h2>
            </a>
        </div>
        <div class="page-body">
            <div class="lock-head">
                 系统锁屏
            </div>
            <div class="lock-body">
                <div class="pull-left lock-avatar-block">
                    <img id="myPortrait" alt="个人头像" src="~/Content/metronic/assets/pages/media/profile/photo3.jpg" class="lock-avatar">
                </div>
                <form id="ffLogin" action="" class="lock-form pull-left">
                    <h4><span id="fullname"></span></h4>
                    <div class="form-group">
                        <input id="password" class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="请输入密码" />
                    </div>
                    <div class="form-actions">
                        <button id="btnLogin" type="submit" class="btn red uppercase">登陆</button>
                    </div>
                </form>
            </div>
            <div class="lock-bottom">
                <a href="/Login/index">切换其他账号登陆</a>
            </div>
        </div>
        <div class="page-footer-custom">
            <span class="label white"> 2016版 &copy; 安徽养和医疗器械设备有限公司</span>
        </div>
    </div>


    <!-- END CONTAINER -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    <script src="~/Content/metronic/assets/global/plugins/respond.min.js"></script>
    <script src="~/Content/metronic/assets/global/plugins/excanvas.min.js"></script>
    <![endif]-->
    @Scripts.Render("~/metronic/js")

    <script>
    //页面初始化
    $(function () {
        var id = Cookies.get('lock_UserID');
        var username = Cookies.get('lock_UserName');

        if(id == undefined || id == '' ) {
            id = "-1";
        }
        $("#myPortrait").attr('src', '/Login/GetPortrait?id=' + id);
        $("#fullname").text(Cookies.get("lock_FullName"));


        //处理表单提交登陆
        $("#btnLogin").click(function () {

             //首先获取到要传递到控制器的参数，并且狗造成Json。UserName，UserPassword，Code
            var postData = {
                UserName: username,
                Password: $("#password").val()
            };

            //发送异步请求实现登录 ajax
            $.ajax({
                type: 'POST',
                url: '/Login/CheckUser',
                dataType: 'json',
                cache: false,
                data: postData,
                success: function (data) {
                    if (data.Success) {
                        window.location.href = "/Home/index";
                    }
                    else {
                        showError("登陆失败：" + data.ErrorMessage, 3000);
                    }
                }
            });
        });
    });
    </script>

</body>
</html>
