@section footerScript {

<script type="text/javascript">
        var currentPage = 1, rows = 10; //分页参数：当前页，记录数

        var isAddOrEdit = 'add';//标识是新增还是编辑对话框弹出，用于删除附件的操作
        var url;//新增或者更新的连接
        var ID;//ID值，新增为空，编辑或者查看为具体ID
        var systemtype_id;

        //页面初始化
        $(function () {
            initJsTree();
            jsTreeEvent();

            InitStyle();        //设置控件的样式
            BindEvent();        //绑定事件处理
            InitDictItem();     //初始化字典信息
        });

        function Refresh()
        {
            initJsTree();
            if(clickId != undefined && clickId != '') {
                loadData(clickId);
            }
        }

        //绑定左侧树形列表
        function initJsTree() {
            bindJsTree("jstree_div", "/Function/GetAllJsTreeJson");
        }
        function jsTreeEvent() {
            //树控件的变化事件处理
            $('#jstree_div').on("changed.jstree", function (e, data) {
                var icon = data.node.icon;
                loadData(data.selected);
            });
        }

        //加载指定的对象数据
        var clickId = "";
        function loadData(id) {
            $("#txtID").text("");
            $("#ffEdit")[0].reset();//清空上次输入
            $('#ffEdit').validate().resetForm();//去除验证信息
            BindEditInfo(id);
            clickId = id;
        }

        //绑定编辑详细信息的方法
        function BindEditInfo(ID) {
            //使用同步方式，使得联动的控件正常显示
            $.ajaxSettings.async = false;

            //首先用户发送一个异步请求去后台实现方法
            $.getJSON("/Function/FindByID?r=" + Math.random() + "&id=" + ID, function (info) {
                 $("#Name1").val(info.Name);
                 $("#ControlID1").val(info.ControlID);
                 $("#SystemType_ID1").val(info.SystemType_ID).trigger("change");
                 systemtype_id = info.SystemType_ID;//记录备用
                 $("#SortCode1").val(info.SortCode);

                $("#PID1").val(info.PID).trigger("change");
                $("#PID_1").val(info.PID);

                $('#lbxRoles').empty();
                $.getJSON("/Role/GetRolesByFunction?r=" + Math.random() + "&functionId=" + ID, function (json) {
                    $.each(json, function (i, item) {
                        $('#lbxRoles').append('<option value="' + item.ID + '">' + item.Name + '</option>');
                    });
                });

                //参考赋值
                //$("#Company_ID1").val(info.Company_ID).trigger("change");
                
                //$("#PID1").val(info.PID).trigger("change");//普通Select2
                // var array = [info.Hobby];
                // $("#Hobby").val(array).trigger("change"); //集合

                // $("input[name='Gender']").iCheck('uncheck');
                // $("input[name='Gender'][value='" + info.Gender + "']").iCheck('check');
                // $("#BirthDate").val(getDateStr(info.BirthDate));

                $("#txtID").text(info.ID);
                $("#ID1").val(info.ID);
                isAddOrEdit = 'edit';//新增对话框标识
            });
        }


        //设置控件的样式
        function InitStyle() {
            
            //统一设置icheck控件的样式
            $('input[class=icheck]').iCheck({
                checkboxClass: 'icheckbox_square-red',
                radioClass: 'iradio_square-red',
            });
            $('.input-daterange input').each(function () {
                $(this).datepicker({
                    language: 'zh-CN', //语言
                    autoclose: true, //选择后自动关闭
                    clearBtn: true,//清除按钮
                    format: "yyyy-mm-dd"//日期格式
                });
            });
 
        }

        //初始化字典信息（下拉列表）
        function InitDictItem() {
            //部分赋值参考
            
            //绑定字典
            //BindDictItem("Rank", "职务");            
            //绑定树列表
            
            BindSelect("PID1", "/Function/GetFunctionDictJson");
            BindSelect("SystemType_ID1", "/SystemType/GetDictJson", '系统类型', function() {
                $("#SystemType_ID1").val('@IOT.MVCWebMis.Controllers.ConfigData.SystemType').trigger("change");
            });

            BindSelect("PID", "/Function/GetFunctionDictJson");
            BindSelect("SystemType_ID", "/SystemType/GetDictJson", '系统类型', function() {
                $("#SystemType_ID").val('@IOT.MVCWebMis.Controllers.ConfigData.SystemType').trigger("change");
            });

            BindSelect("Batch_PID", "/Function/GetFunctionDictJson");
            BindSelect("Batch_SystemType_ID", "/SystemType/GetDictJson",'系统类型', function() {
                $("#Batch_SystemType_ID").val('@IOT.MVCWebMis.Controllers.ConfigData.SystemType').trigger("change");
            });    

            //绑定可选多个Tag
            var tags = ["添加", "删除", "修改", "查看", "导入", "导出"];
            $.each(tags, function (i, item) {
                $("#Batch_SubFunction").tagsinput('add', item);
            });            

            //绑定添加界面的公司、部门（联动处理）
            // BindSelect("Company_ID", "/User/GetMyCompanyDictJson?userId="+@Session["UserId"]);
            // $("#Company_ID").on("change", function (e) {
            //     var companyid = $("#Company_ID").val();
            //     BindSelect("Dept_ID", "/User/GetDeptDictJson?parentId="+ companyid);
            // });
        }

        //实现删除数据的方法
        function Delete() {
            if(clickId != undefined && clickId != '') {
                showDelete(function () {
                    //然后发送异步请求的信息到后台删除数据
                    var postData = { Ids: clickId };
                    $.post("/Function/DeletebyIds", postData, function (json) {
                        var data = $.parseJSON(json);
                        if (data.Success) {
                            showTips("删除选定的记录成功");
                            initJsTree();//刷新数据

                            $("#ffEdit")[0].reset();//清空上次输入
                            $('#ffEdit').validate().resetForm();//去除验证信息
                        }
                        else {
                            showTips(data.ErrorMessage);
                        }
                    });
                });                
            } else {
                showTips("请选择你要删除的数据");
            }
        }

        //删除指定的记录
        function DeleteByIds(ids) {
            if (ids != "") {
                showDelete(function () {
                    //最后去掉最后的逗号,
                    ids = ids.replace(/,\s*$/, '');

                    //然后发送异步请求的信息到后台删除数据
                    var postData = { Ids: ids };
                    $.post("/Function/DeletebyIds", postData, function (json) {
                        var data = $.parseJSON(json);
                        if (data.Success) {
                            showTips("删除选定的记录成功");
                            initJsTree();//刷新页面数据
                        }
                        else {
                            showTips(data.ErrorMessage);
                        }
                    });
                });
            } else {
                showTips("请选择你要删除的数据");
            }
        }

        //弹出新增对话框
        function Add() {
            isAddOrEdit = 'add';//新增对话框标识
            //CKEDITOR.instances.Content.setData('');  //清空编辑器的数据
            $("#ffAdd")[0].reset();//清空上次输入
            $('#ffAdd').validate().resetForm();//去除验证信息

            //增加记录前，赋值ID
            url = '/Function/Insert';
            $.get("/Function/NewGuid?r=" + Math.random(), function (result) {
                $("#ID").val(result);
                ID = result;
            });


            $("#PID").val(clickId).trigger("change");
            $("#SystemType_ID").val('@IOT.MVCWebMis.Controllers.ConfigData.SystemType').trigger("change");
            //$("#SystemType_ID").val(systemtype_id).trigger("change");

            //初始化部分控件
            //$('input[name="Gender"][value="男"]').iCheck('check');
            //$("#Hobby").val(null).trigger("change");//清空下拉框

            $("#lblAddTitle").text("添加信息");
            $("#add").modal("show");
        }

        //显示导入界面
        function ShowImport() {
            $("#import").modal("show");
        }

        //导出Excel数据
        function ShowExport() {
            var url = "/Function/Export";
            var condition = $("#ffSearch").serialize();//获取条件

            executeExport(url, condition);//执行导出
        }

        function BatchAdd() {
            $("#ffBatch")[0].reset();//清空上次输入
            $('#ffBatch').validate().resetForm();//去除验证信息
            $("#Batch_PID").val(clickId).trigger("change");
            //$("#Batch_SystemType_ID").val(systemtype_id).trigger("change");            
            $("#Batch_SystemType_ID").val('@IOT.MVCWebMis.Controllers.ConfigData.SystemType').trigger("change");

            var tags = ["添加", "删除", "修改", "查看", "导入", "导出"];
            $.each(tags, function (i, item) {
                $("#Batch_SubFunction").tagsinput('add', item);
            });
                      
            $("#batch").modal("show");
        }

        //绑定相关事件
        function BindEvent() {
            //添加、编辑记录的窗体处理
            formValidate("ffAdd", function (form) {
                $("#add").modal("hide");
                //构造参数发送给后台

