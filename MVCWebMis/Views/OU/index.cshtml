@section footerScript {

<script type="text/javascript">
        var currentPage = 1, rows = 10; //分页参数：当前页，记录数
        var isAddOrEdit = 'add';//标识是新增还是编辑对话框弹出，用于删除附件的操作
        var url;//新增或者更新的连接
        var ID;//ID值，新增为空，编辑或者查看为具体ID

        //页面初始化
        $(function () {
            initJsTree();       //初始化部门机构树
            InitStyle();        //设置控件的样式
            BindEvent();        //绑定事件处理
            InitDictItem();     //初始化字典信息
        });

        //刷新页面
        function Refresh()
        {
            initJsTree();
            if(clickId != undefined && clickId != '') {
                loadData(clickId);
            }
        }

        //绑定左侧树形列表
        function initJsTree() {
            bindJsTree("jstree_div", "/User/GetMyDeptJsTreeJson?userId=@Session["UserId"]");

            //树控件的变化事件处理
            $('#jstree_div').on("changed.jstree", function (e, data) {
                var icon = data.node.icon;
                loadData(data.selected);
            });
        }

        //加载指定的对象数据
        var clickId = "";
        function loadData(id) {
            $('#ffEdit').validate().resetForm();//去除验证信息
            BindEditInfo(id);
            clickId = id;
        }

        //绑定编辑详细信息的方法
        function BindEditInfo(ID) {
            //使用同步方式，使得联动的控件正常显示
            $.ajaxSettings.async = false;

            //首先用户发送一个异步请求去后台实现方法
            $.getJSON("/Ou/FindByID?r=" + Math.random() + "&id=" + ID, function (info) {
                 @if (@ViewBag.Name == "admin")
                {
                    <text> $("#PID1").val(info.PID).trigger("change");</text>
                }
                 $("#HandNo1").val(info.HandNo);
                 $("#Name1").val(info.Name);
                 $("#SortCode1").val(info.SortCode);
                 $("#Category1").val(info.Category).trigger("change");
                 $("#Address1").val(info.Address);
                 $("#OuterPhone1").val(info.OuterPhone);
                 $("#InnerPhone1").val(info.InnerPhone);
                 $("#Note1").val(info.Note);
                
                reloadRelation(ID);

                $("#ID1").val(info.ID);
