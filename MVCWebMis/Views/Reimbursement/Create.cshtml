                title: title,
                draftId: '@Request["draftid"]',
                mainJson: mainJson,
                detailJson: detailJson,
                detailJson2: null,
                detailJson3: null,
            };
            postData = JSON.stringify(postData);//转换为JSON数据，以POST提交
